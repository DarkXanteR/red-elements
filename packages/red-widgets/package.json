{
  "name": "@tecla5/red-widgets",
  "productName": "red-widgets",
  "private": true,
  "description": "node-red jQuery widgets, controller logic and styles",
  "version": "0.0.1",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "test": "jest --no-cache --config ./jest.config.js",
    "test:watch": "jest --watch",
    "lerna:bootstrap": "lerna bootstrap --scope @tecla5/red-widgets",
    "lerna:update": "npm run lerna:clean && npm run lerna:bootstrap",
    "lerna:clean": "rm -f package.json.lock 2> /dev/null && echo y | lerna clean --scope @tecla5/red-widgets"
  },
  "dependencies": {
    "@tecla5/red-shared": "^0.0.1",
    "@types/jest": "^21.1.8",
    "ace-builds": "^1.2.8",
    "bootstrap": "^3.3.7",
    "bootstrap-select": "^1.12.4",
    "bottlejs": "^1.6.2",
    "brace": "^0.11.0",
    "d3": "^4.10.2",
    "font-awesome": "^4.7.0",
    "i18next": "^9.0.1",
    "inversify": "^4.5.2",
    "inversify-inject-decorators": "^3.0.2",
    "jquery": "^3.2.1",
    "jquery-ui-dist": "^1.12.1",
    "jsonata": "^1.3.1",
    "marked": "^0.3.6",
    "normalize.css": "^7.0.0",
    "promise-polyfill": "^6.0.2",
    "reflect-metadata": "^0.1.10",
    "ts-jest": "^21.2.4"
  },
  "devDependencies": {
    "@types/jquery": "^3.2.16",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-jest": "^21.2.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.3.1",
    "browser-env": "^2.0.31",
    "cross-env": "^5.0.0",
    "enzyme": "^3.1.1",
    "enzyme-to-json": "^3.2.2",
    "faker": "^4.1.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^21.2.1",
    "jest-cli": "^21.2.1",
    "jest-jquery-matchers": "^1.4.2",
    "promise": "^8.0.1",
    "puppeteer": "^0.13.0",
    "ts-jest": "^21.2.4",
    "typescript": "2.6.2"
  },
  "babel": {
    "presets": [
      "env"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/__tests__/.*\\.(ts|tsx|js)$"
  }
}
