{
  "name": "@tecla5/red-deploy-widget",
  "productName": "red-deploy-widget",
  "private": true,
  "description": "Deploy widget for Node RED",
  "version": "0.0.1",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "test": "jest --no-cache --config ./jest.config.js",
    "test:watch": "jest --watch",
    "lerna:bootstrap": "lerna bootstrap --scope @tecla5/red-deploy-widget",
    "lerna:update": "npm run lerna:clean && npm run lerna:bootstrap",
    "lerna:update:win": "npm run lerna:clean:win && npm run lerna:bootstrap",
    "lerna:clean": "rm -f package.json.lock 2> /dev/null && echo y | lerna clean --scope @tecla5/red-deploy-widget",
    "lerna:clean:win": "npm run clean:lock | lerna clean --scope @tecla5/red-deploy-widget",
    "clean:win": "npm run clean:lock | clean:modules",
    "clean:lock": "del /s /f /q package-lock.json.lock",
    "clean:modules": "del /s /f /q node_modules/*",
    "link:shared": "npm link @tecla5/red-deploy-widget"
  },
  "dependencies": {
    "@tecla5/red-base": "^0.0.1",
    "@tecla5/red-runtime": "^0.0.1",
    "@tecla5/red-api": "^0.0.1",
    "bootstrap": "^4.0.0",
    "bootstrap-select": "^1.12.4",
    "font-awesome": "^4.7.0",
    "i18next": "^9.0.1",
    "jquery": "^3.3.1",
    "jquery-ui-dist": "^1.12.1"
  },
  "devDependencies": {
    "javascript-decorators": "^1.0.2",
    "@darkobits/class-decorator": "^3.1.0",
    "inversify": "^4.9.0",
    "inversify-inject-decorators": "^3.1.0",
    "@types/jquery": "^3.2.16",
    "@types/d3": "^4.12.0",
    "@types/jqueryui": "^1.11.37",
    "@types/jest": "^21.1.9",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-jest": "^21.2.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.3.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "browser-env": "^2.0.31",
    "cross-env": "^5.0.0",
    "enzyme": "^3.1.1",
    "enzyme-to-json": "^3.2.2",
    "faker": "^4.1.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^22.1.4",
    "jest-cli": "^22.1.4",
    "jest-jquery-matchers": "^2.0.0",
    "promise": "^8.0.1",
    "puppeteer": "^0.13.0",
    "ts-jest": "^22.0.1",
    "typescript": "^2.6.2"
  }
}
